extends layout

mixin metric(display,id)
  div(class="panel panel-default",id="#{id}--display")
    if title
      div.panel-heading: h3.panel-title=display
    div(class="panel-body metric")
      h1(id="#{id}--datafield")="TBD"



block content
  div(class="container")
    div.page-header.h1.text="Is There Love?"
    div(class="row")
      div(class="col-lg-3")
        +metric("Love Percentage","Love_Percentage")
      div(class="col-lg-3")
        +metric("Hate Percentage","Hate_Percentage")
      div(class="col-lg-3")
        +metric("Total Tweets","Total_Tweets")
    div(class="row")
      div(class="col-lg-9")
        div(class="tweet-table-div")
          table(id="tweet-table-header" class="table table-bordered")
            tr(class="tweet-table-header")
              td(class="col-lg-2") Handle
              td(class="col-lg-7") Tweet
      div(class="col-lg-9")
        div(class="tweet-table-div")
          table(id="tweet-table" class="table table-bordered")
            tr(class="tweet-table")
              

block scripts
  script(src='javascripts/jquery.min.js')
  script(src='/socket.io/socket.io.js')
  script(src='/javascripts/client.socket.io.js')
  script(src='/javascripts/bootstrap.min.js')
